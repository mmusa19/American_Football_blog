<%- include("partials/header") %>
<div class="ui main text container segment" style="margin:7em 0 7em 0;">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached ">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image%>" />
    </div>
    <div class="content">
      <strong><%= blog.created.toDateString()%></strong>
    </div>
    <div class="description">
      <p><%= blog.body%></p>
    </div>
  </div>
  <div style="margin-top: 1em;">
    <a class="ui orange basic button" href="/blogs/<%=blog._id%>/edit">EDIT</a>
    <form
      action="/blogs/<%=blog._id%>?_method=DELETE"
      method="POST"
      style="display: inline;"
    >
      <button class="ui red basic button" type="submit">DELETE</button>
    </form>
  </div>
</div>
<%- include("partials/footer") %>
